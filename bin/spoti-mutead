#!/bin/sh  

sleep 20

com="playerctl -p spotify"

while true
do  
  if { "$com" metadata | grep -q Advertisement && amixer get Master | grep -Fq '[on]'; }
  then
      "$com" volume 0

      while playerctl metadata | grep Advertisement
      do
	  sleep 2
      done

      "$com" volume 1
  fi
  sleep 5
done
